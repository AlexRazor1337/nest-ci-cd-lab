<!-- views/layout.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jewelry Workshop Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            color: #333;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        form {
            background: #f9f9f9;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        input[type="text"], input[type="number"], select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        input[type="submit"] {
            display: inline-block;
            background: #333;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }
        input[type="submit"]:hover {
            background: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        {{{body}}}
    </div>
</body>
</html>

<!-- views/index.hbs -->
<h1>Jewelry Workshop Management</h1>
<h2>Products</h2>
<table>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Type</th>
        <th>Total Weight</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    {{#each products}}
    <tr>
        <td>{{this.productCode}}</td>
        <td>{{this.name}}</td>
        <td>{{this.type}}</td>
        <td>{{this.totalWeight}}</td>
        <td>{{this.price}}</td>
        <td>
            <a href="/products/{{this.product_id}}/edit">Edit</a>
            <form action="/products/{{this.product_id}}/delete" method="POST" style="display:inline;">
                <input type="submit" value="Delete">
            </form>
        </td>
    </tr>
    {{/each}}
</table>

<h3>Add New Product</h3>
<form action="/products" method="POST">
    <input type="text" name="productCode" placeholder="Product Code" required>
    <input type="text" name="name" placeholder="Name" required>
    <select name="type" required>
        <option value="earrings">Earrings</option>
        <option value="rings">Rings</option>
        <option value="brooches">Brooches</option>
        <option value="bracelets">Bracelets</option>
    </select>
    <input type="number" name="totalWeight" placeholder="Total Weight" step="0.01" required>
    <input type="number" name="price" placeholder="Price" step="0.01" required>
    <input type="submit" value="Add Product">
</form>

<h2>Materials</h2>
<table>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Price per Gram</th>
        <th>Actions</th>
    </tr>
    {{#each materials}}
    <tr>
        <td>{{this.materialCode}}</td>
        <td>{{this.name}}</td>
        <td>{{this.pricePerGram}}</td>
        <td>
            <a href="/materials/{{this.material_id}}/edit">Edit</a>
            <form action="/materials/{{this.material_id}}/delete" method="POST" style="display:inline;">
                <input type="submit" value="Delete">
            </form>
        </td>
    </tr>
    {{/each}}
</table>

<h3>Add New Material</h3>
<form action="/materials" method="POST">
    <input type="text" name="materialCode" placeholder="Material Code" required>
    <input type="text" name="name" placeholder="Name" required>
    <input type="number" name="pricePerGram" placeholder="Price per Gram" step="0.01" required>
    <input type="submit" value="Add Material">
</form>

<!-- views/edit-product.hbs -->
<h1>Edit Product</h1>
<form action="/products/{{product.product_id}}" method="POST">
    <input type="text" name="productCode" value="{{product.productCode}}" required>
    <input type="text" name="name" value="{{product.name}}" required>
    <select name="type" required>
        <option value="earrings" {{#if (eq product.type 'earrings')}}selected{{/if}}>Earrings</option>
        <option value="rings" {{#if (eq product.type 'rings')}}selected{{/if}}>Rings</option>
        <option value="brooches" {{#if (eq product.type 'brooches')}}selected{{/if}}>Brooches</option>
        <option value="bracelets" {{#if (eq product.type 'bracelets')}}selected{{/if}}>Bracelets</option>
    </select>
    <input type="number" name="totalWeight" value="{{product.totalWeight}}" step="0.01" required>
    <input type="number" name="price" value="{{product.price}}" step="0.01" required>
    <input type="submit" value="Update Product">
</form>

<!-- views/edit-material.hbs -->
<h1>Edit Material</h1>
<form action="/materials/{{material.material_id}}" method="POST">
    <input type="text" name="materialCode" value="{{material.materialCode}}" required>
    <input type="text" name="name" value="{{material.name}}" required>
    <input type="number" name="pricePerGram" value="{{material.pricePerGram}}" step="0.01" required>
    <input type="submit" value="Update Material">
</form>
